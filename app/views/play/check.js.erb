<% if @check_answer %>
    //-- #Xóa hình câu hỏi, thẻ .listword chứa danh sách từ để chọn,thẻ form chứa đáp án
    $(".boximg").remove();
    $(".listword").remove();
    $("#reanswer").remove();
    $(".k_info_user").remove();

    //-- #Load form _play.html.erb vào thẻ .content
    $(".content").append('<%= j render 'play' %>');
    $(".k_welcome").append('<%= j render 'infouser' %>');

    //-- #Load lại các hàm jquery -->
    $(".content").load_event();
    $(".content").load_effect();

<% else %>
    alert('Đáp án chưa chính xác');
<% end %>
