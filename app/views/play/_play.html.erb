<!-- #box chứ hình câu hỏi %> -->
<div class="boximg">
  <img id="hinh" src="<%= @urlimg %>">
</div>

<!-- #Danh sách ô chứa từ để trả lời -->
<div class="listword">
  <% @listext.each_char do |char| %>
      <div class="word" id="<%= char %>">
        <img src="/assets/word.png"/>
        <p><%= char %></p>
      </div>
  <% end %>
</div>

<!-- #Danh sách ô chứa kết quả trả lời -->
<%= form_tag playcheck_path, method:"get",remote:true do %>
    <%= hidden_field_tag(:answer, "") %>
    <div class="listBoxtext">
    <% @result.length.times do %>
        <div class="boxtext">
          <img src="/assets/ochu.png"/>
        </div>
    <% end %>

    </div>
<% end %>


